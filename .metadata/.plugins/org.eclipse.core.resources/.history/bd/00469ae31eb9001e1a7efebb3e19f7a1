package session2;

import java.util.Scanner;

import session1.myNode;

class myNode{
	// Thành phần dữ liệu
	int data;
		
	// Thành phần con trỏ
	myNode next;
}

public class InputLinkedList {

	public static void main(String[] args) {
		// Nhập vào linked list từ bàn phím
		myNode head = null;
		Scanner input = new Scanner(System.in);
		char isContinue;
		do {
			System.out.print("Nhập vào giá trị của node");
			int data = input.nextInt();
			// Tạo node
			myNode myNode = new myNode();
			myNode.data = data;
			myNode.next = null;
			head = myNode;
			
			// Gắn node vào list
			if (head == null) {
				head = myNode;
			} else {
				// add vào đầu
				myNode.next = head;
				head = myNode;
			}
		
			printList(head);
			
			input.nextLine();
			System.out.print("Bạn có có muốn tiếp tục nhập hay không (Y/N)?");
			isContinue = input.nextLine().charAt(0);
		} while(isContinue == 'Y' || isContinue == 'y');

	}
	public static void printList(myNode head) {
		myNode temp = head;
		System.out.print("head -> ");
		while(temp != null) {
			System.out.print("[data: " + temp.data + "] -> ");
			temp = temp.next;
		}
		System.out.println("null");
		
	}

}
