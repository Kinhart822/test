package jplb.l.a05.opt1;

import java.util.Scanner;

public class Ex1 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.print("Enter a number: ");
        int n = input.nextInt();

        for(int i = n; i >= 1; i--) {
            if(i % 2 == 0) {
                System.out.print(i + " ");
            }
        }
		
	}	
}


